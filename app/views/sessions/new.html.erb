<h1 class="sign-in">You must sign in or create an account to create a trip</h1>
<div class='container'>
  <div class='oauth-logins'>
    <div class="row">
        <%= link_to "/auth/google_oauth2", class: "btn btn-social btn-google" do %>
          <span class="fa fa-google"></span> Sign in with Google
        <% end %>
        <%= link_to "/auth/facebook", class: "btn btn-social btn-facebook" do %>
          <span class="fa fa-facebook"></span> Sign in with Facebook
        <% end %>
      </div>
    </div>
</div>

<div class="container form">
  <h3 class="sign-in">Sign In with Email:</h3>
  <%= bootstrap_form_for(:session, url: login_path) do |f| %>
    <%= f.text_field :email %>

    <%= f.password_field :password %>

    <%= f.submit "Sign In", class:"btn btn-sign-in" %>
  <% end %>
</div>

<div class='forgot-password-field'>
  <h3 class="sign-in">Don't have an account? <%= link_to "Create an Account with Email", new_user_path %></h3>
  <h3 class="sign-in">Forgot your password?</h3>
  <%= form_tag(confirm_email_path, method: :post) do %>
    <%= text_field_tag :email, params[:email], placeholder: "Enter Your Email", class: "email-field" %>

    <%= submit_tag "Send SMS", class: "btn btn-get-sms" %>
  <% end %>
</div>
